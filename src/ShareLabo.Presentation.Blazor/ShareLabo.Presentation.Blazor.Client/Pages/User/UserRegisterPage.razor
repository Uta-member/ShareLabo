@inherits ShareLaboPageBase
@layout BlankLayout

<PageTitle>@PageTitle</PageTitle>

<div class="d-flex flex-row gap-3 flex-wrap w-100 h-100 mt-3 justify-content-center align-items-center">
    <div class="d-flex flex-column" style="width: 30%; min-width: 300px;">
        <h1>ShareLabo</h1>
    </div>

    <div class="d-flex flex-column gap-3" style="width: 30%; min-width: 300px;">
        <h2>ユーザ情報登録</h2>
        @if (!string.IsNullOrWhiteSpace(_message))
        {
            <p class="text-danger">
                @_message
            </p>
        }

        <div>
            <label for="accountIdInput" class="form-label">アカウントID</label>
            <input type="text" class="form-control" id="accountIdInput" placeholder="アカウントID(英数字記号、@(Domain.ValueObject.UserAccountId.MinLength)～@(Domain.ValueObject.UserAccountId.MaxLength)文字)" @bind-value="_userRegisterViewModel.AccountId" disabled="@_isProcessing">
        </div>

        <div>
            <label for="userNameInput" class="form-label">ユーザ名</label>
            <input type="text" class="form-control" id="userNameInput" placeholder="ユーザ名(@(Domain.ValueObject.UserName.MinLength)～@(Domain.ValueObject.UserName.MaxLength)文字)" @bind-value="_userRegisterViewModel.Name" disabled="@_isProcessing">
        </div>

        <button @onclick="RegisterAsync" class="btn btn-primary" disabled="@_isProcessing">
            @if (_isProcessing)
            {
                <span class="spinner-grow spinner-grow-sm" role="status" aria-hidden="true"></span>
                <span>登録中...</span>
            }
            else
            {
                <span>登録</span>
            }
        </button>
        <a href="@(ShareLaboPagePath.Helper.Logout())">ログアウト</a>
    </div>
</div>
